# API Keys (obtener en plataformas respectivas)
ANTHROPIC_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face (para modelos embeddings)
HF_TOKEN=your_huggingface_token_here

# ChromaDB
CHROMA_DB_PATH=./models/chroma_db

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2

# LLM Config
LLM_MODEL=claude-sonnet-4-5-20250929
LLM_TEMPERATURE=0.7
MAX_TOKENS=2000

# RAG Config
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RESULTS=5

# PWA Config
CACHE_VERSION=v1
OFFLINE_MODE=true

# Logs
LOG_LEVEL=INFO
LOG_FILE=./outputs/app.log
